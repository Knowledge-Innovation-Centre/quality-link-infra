#==============================================================================
# POSTGRES
#==============================================================================
# Container and network
POSTGRES_IMAGE=postgres:alpine3.22
POSTGRES_CONTAINER_NAME=ql_db
POSTGRES_PORT=5432

# Database settings
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=quality_link_db

# Connection strings
MAGE_DATABASE_CONNECTION_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_CONTAINER_NAME}:${POSTGRES_PORT}/mage
BACKEND_DATABASE_CONNECTION_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_CONTAINER_NAME}:${POSTGRES_PORT}/backend


#==============================================================================
# DRAGONFLY (REDIS)
#==============================================================================
# Container and network
DRAGONFLY_CONTAINER_NAME=ql_redis
DRAGONFLY_PORT=6379

# Image and basic config
DRAGONFLY_IMAGE=docker.dragonflydb.io/dragonflydb/dragonfly
DRAGONFLY_DATA_DIR=/data
DRAGONFLY_PASSWORD=your_redis_password

# Performance settings
DRAGONFLY_BIND=0.0.0.0
DRAGONFLY_CACHE_MODE=true
DRAGONFLY_DBNAME=dump
DRAGONFLY_DBNUM=6
DRAGONFLY_HZ=100
DRAGONFLY_KEYS_OUTPUT_LIMIT=8192
DRAGONFLY_SNAPSHOT_CRON=* * * * *

# Connection string
MAGEAI_REDIS_URL=redis://:${DRAGONFLY_PASSWORD}@${DRAGONFLY_CONTAINER_NAME}:6379/0


#==============================================================================
# MINIO (S3-COMPATIBLE STORAGE)
#==============================================================================
# Container and network
MINIO_CONTAINER_NAME=ql_bucket
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Image and basic config
MINIO_IMAGE=quay.io/minio/minio:RELEASE.2025-06-13T11-33-47Z
MINIO_DATA_DIR=/data

# Authentication
MINIO_ROOT_USER=minio_user
MINIO_ROOT_PASSWORD=minio_password


#==============================================================================
# APACHE JENA FUSEKI CONFIGURATION
#==============================================================================

# Container settings
FUSEKI_CONTAINER_NAME=fuseki_container
FUSEKI_IMAGE=stain/jena-fuseki:latest
FUSEKI_PORT=3031

# Dataset settings
FUSEKI_DATASET_NAME=fuseki_dataset
FUSEKI_TDB2_ENABLED=true

# Access & permissions
FUSEKI_ADMIN_PASSWORD=fuseki_password
FUSEKI_ENABLE_DATA_WRITE=true
FUSEKI_ENABLE_UPDATE=true

# JVM settings
FUSEKI_JVM_ARGS="-Xmx2g -XX:+UseContainerSupport"


#==============================================================================
# MAGEAI
#==============================================================================
# Container and network
MAGEAI_CONTAINER_NAME=ql_workflow
MAGEAI_PORT=6789

# Project structure
MAGEAI_BASE_PATH=/home/src
MAGEAI_PROJECT_NAME=ql

# Authentication
MAGEAI_REQUIRE_AUTH=1
DEFAULT_OWNER_EMAIL=your_email@example.com
DEFAULT_OWNER_USERNAME=your_username
DEFAULT_OWNER_PASSWORD=your_password


#==============================================================================
# BACKEND
#==============================================================================
BACKEND_CONTAINER_NAME=ql_backend
BACKEND_PORT=8000

# Database name (should match POSTGRES_DB or a specific DB your backend uses)
DB_NAME=backend

# Redis connection for backend
BACKEND_REDIS_URL=redis://:${DRAGONFLY_PASSWORD}@${DRAGONFLY_CONTAINER_NAME}:6379/1

# MinIO connection
MINIO_HOST=minio:9000
BUCKET_NAME=quality-link-storage


#==============================================================================
# FRONTEND CONFIGURATION
#==============================================================================

# Container settings
FRONTEND_CONTAINER_NAME=ql_frontend
FRONTEND_PORT=3333

# Environment variables for the app
VITE_API_URL=$SERVICE_URL_BACKEND
VITE_RECAPTCHA_SITE_KEY=API_KEY

